<script>
    $(".play-instance").on("click", (event) => {
        console.log(event.currentTarget.href);

        // set media source
        const audio = document.getElementById('audio');
        audio.src = event.currentTarget.href;
        audio.play();

        // set media metadata
        document.querySelector(".player__title").textContent = $(event.currentTarget).data("song");
        document.querySelector(".player__artist").textContent = $(event.currentTarget).data("artist");
        document.querySelector(".player__cover img").src = $(event.currentTarget).data("img");


        event.preventDefault();
    })

    const quickSearch = document.querySelector("#quick-search");

    function resetFilter() {
        const clear = document.querySelectorAll(`.release div.item-music.d-none`);
        clear.forEach (item => {
            item.classList.remove("d-none")
        })
    }

    function filterMusic() {
        if (quickSearch.value) {
            const notContains = document.querySelectorAll(`.release div.item-music:not([data-music-name*='${quickSearch.value}'])`);
            notContains.forEach (item => {
                item.classList.add("d-none")
            })

            const Contains = document.querySelectorAll(`.release div.item-music[data-music-name*='${quickSearch.value}']`);
            Contains.forEach (item => {
                item.classList.remove("d-none")
            })
        } else {
            resetFilter()
        }
    }
</script>